<Window x:Class="MrHrumsHomeEdition.Views.Food.FoodName.ChangeFoodName_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MrHrumsHomeEdition.Views.Food.FoodName"
        mc:Ignorable="d"
        Title="{StaticResource ChangeFoodNameWindow_NameOfWindow}"
        Height="150" Width="450"
        DataContext="{StaticResource Food_ViewModel_Context}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Название:"/>
        <TextBox Text="{Binding LocalFoodName.Name}"
                 Grid.Column="1"/>
        <Button Content="{StaticResource Apply_ButtonContent}"
                Command="{Binding ChangeFoodName}"
                CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                Grid.ColumnSpan="2"
                Grid.Row="1"/>
    </Grid>
</Window>
